<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4e4e4"
    android:orientation="vertical"
    tools:context=".DashboardActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                app:elevation="0dip">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:minHeight="?attr/actionBarSize"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark" />
            </com.google.android.material.appbar.AppBarLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/appBarLayout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:text="@string/resource_type"
                        android:textSize="20sp" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/oxygenRequirement"
                            android:layout_width="100dp"
                            android:layout_height="120dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"
                            app:cardBackgroundColor="#F5F5F5"
                            app:cardElevation="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="10dp"
                                    android:contentDescription="@string/oxy"
                                    android:padding="5dp"
                                    android:src="@drawable/oxygen2" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:text="@string/oxygen"
                                    android:textSize="18sp" />
                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/medicineReq"
                            android:layout_width="100dp"
                            android:layout_height="120dp"
                            android:layout_marginTop="10dp"
                            app:cardBackgroundColor="#F5F5F5"
                            app:cardElevation="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="10dp"
                                    android:contentDescription="@string/oxy"
                                    android:padding="5dp"
                                    android:src="@drawable/medicine" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:text="@string/medicine"
                                    android:textSize="18sp" />
                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/ambulanceReq"
                            android:layout_width="110dp"
                            android:layout_height="120dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"
                            app:cardBackgroundColor="#F5F5F5"
                            app:cardElevation="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="10dp"
                                    android:contentDescription="@string/oxy"
                                    android:padding="5dp"
                                    android:src="@drawable/amb" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:text="@string/ambulance"
                                    android:textSize="18sp" />
                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/plasmaReq"
                            android:layout_width="100dp"
                            android:layout_height="120dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"
                            app:cardBackgroundColor="#F5F5F5"
                            app:cardElevation="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="10dp"
                                    android:contentDescription="@string/oxy"
                                    android:padding="5dp"
                                    android:src="@drawable/plasma" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:text="@string/plasma"
                                    android:textSize="18sp" />
                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/bedsReq"
                            android:layout_width="100dp"
                            android:layout_height="120dp"
                            android:layout_marginTop="10dp"
                            app:cardBackgroundColor="#F5F5F5"
                            app:cardElevation="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="10dp"
                                    android:contentDescription="@string/oxy"
                                    android:padding="5dp"
                                    android:src="@drawable/hosbed" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:text="@string/beds"
                                    android:textSize="18sp" />
                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/mealsReq"
                            android:layout_width="110dp"
                            android:layout_height="120dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"
                            app:cardBackgroundColor="#F5F5F5"
                            app:cardElevation="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="10dp"
                                    android:contentDescription="@string/oxy"
                                    android:padding="5dp"
                                    android:src="@drawable/meals" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:text="@string/meals"
                                    android:textSize="18sp" />
                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">


                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/covidTestReq"
                            android:layout_width="100dp"
                            android:layout_height="120dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"
                            app:cardBackgroundColor="#F5F5F5"
                            app:cardElevation="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="10dp"
                                    android:contentDescription="@string/oxy"
                                    android:padding="5dp"
                                    android:src="@drawable/ct" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:text="@string/covid_test"
                                    android:textSize="18sp" />
                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/helplineReq"
                            android:layout_width="100dp"
                            android:layout_height="120dp"
                            android:layout_marginTop="10dp"
                            app:cardBackgroundColor="#F5F5F5"
                            app:cardElevation="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="10dp"
                                    android:contentDescription="@string/oxy"
                                    android:padding="5dp"
                                    android:src="@drawable/help" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:text="@string/helpline"
                                    android:textSize="18sp" />
                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/miscReq"
                            android:layout_width="110dp"
                            android:layout_height="120dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"
                            app:cardBackgroundColor="#F5F5F5"
                            app:cardElevation="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="10dp"
                                    android:contentDescription="@string/oxy"
                                    android:padding="5dp"
                                    android:src="@drawable/misc" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:text="@string/miscellaneous"
                                    android:textSize="18sp" />
                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>


                    <View
                        android:layout_width="350dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="#f0f0f0" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="#c4c4c4" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:text="@string/latest_data" />

                        <Button
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:text="@string/add" />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_gravity="center"

                        android:background="#c4c4c4" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="15dp"
                        android:backgroundTint="#e4e4e4"
                        android:drawableEnd="@drawable/ic_arrow"
                        android:text="Lucknow"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:textAlignment="viewStart"
                        android:textAllCaps="false"
                        android:textColor="#696969" />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginHorizontal="10dp"
                        android:backgroundTint="#e4e4e4"
                        android:drawableEnd="@drawable/ic_arrow"
                        android:text="Kanpur"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:textAlignment="viewStart"
                        android:textAllCaps="false"
                        android:textColor="#696969" />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginHorizontal="10dp"
                        android:backgroundTint="#e4e4e4"
                        android:drawableEnd="@drawable/ic_arrow"
                        android:text="Agra"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:textAlignment="viewStart"
                        android:textAllCaps="false"
                        android:textColor="#696969" />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginHorizontal="10dp"
                        android:backgroundTint="#e4e4e4"
                        android:drawableEnd="@drawable/ic_arrow"
                        android:text="Varanasi"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:textAlignment="viewStart"
                        android:textAllCaps="false"
                        android:textColor="#696969" />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginHorizontal="10dp"
                        android:backgroundTint="#e4e4e4"
                        android:drawableEnd="@drawable/ic_arrow"
                        android:text="Ghaziabad"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:textAlignment="viewStart"
                        android:textAllCaps="false"
                        android:textColor="#696969" />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginHorizontal="10dp"
                        android:backgroundTint="#e4e4e4"
                        android:drawableEnd="@drawable/ic_arrow"
                        android:text="Prayagraj"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:textAlignment="viewStart"
                        android:textAllCaps="false"
                        android:textColor="#696969" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/takeOver"
                        android:text="➔"
                        android:layout_marginHorizontal="25dp"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="end"
                        android:textSize="23sp"/>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/menu" />


</androidx.drawerlayout.widget.DrawerLayout>

